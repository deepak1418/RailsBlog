<div class="container", style="alignment: center">

<%= form_tag authors_change_password_path, method: :put do %>
  <%= fields_for :author do |f| %>

    <div class="container bootstrap snippet">
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-th"></span>
          Change password
        </h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 separator social-login-box"> <br>
<!--            <img alt="" class="img-thumbnail" src="https://bootdey.com/img/Content/avatar/avatar1.png">-->
            <%= image_tag(current_author.avatar.url,class:"img-thumbnail",alt:"") if current_author.avatar? %>

          </div>
          <div style="margin-top:80px;" class="col-xs-6 col-sm-6 col-md-6 login-box">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <%= f.password_field :current_password, class: 'form-control' ,placeholder:"Current Password"%>

              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-log-in"></span></div>
                <%= f.password_field :new_password, class: 'form-control' ,placeholder: "New Password"%>

              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <%= f.password_field :new_password_confirmation, class: 'form-control',placeholder: "new_password_confirmation" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6"></div>
          <div class="col-xs-6 col-sm-6 col-md-6">

            <%= f.submit "Change password", class: 'btn btn-success' %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <% end %>
  </div>
<% end %>
</div>
