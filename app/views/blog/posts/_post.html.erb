
<div class="col-sm-8 col-lg-4">
  <div class="card">
      <div class="card-topper" style='background-image: url(<%=post.banner_image_url %>);'></div>


    <div class="card-block">
      <h4 class="card-title"><%= link_to truncate(post.title,length: 70) ,post %></h4>
      <p class="tags" ><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name) }.join(', ') %></p>
      <% if author_signed_in? %>
        <%= link_to  "Author : #{post.a_name}",author_post_path(post.author_id) %>
      <%end%>
      <p class="published-date"><%=post.display_day%></p>



      <%= link_to post  do%>
        <p class="card-text"><%= truncate(post.description,length: 90) %></p>
      <% end %>


    </div>
  </div>
</div>
