<div id="login-overlay" class="modal-dialog">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title" id="myModalLabel">Please Sign In</h4>
    </div>

  <div class="modal-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="well">
              <div class="form-group">
                    <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: "autofocus", autocomplete: "off",class:"form-control",id:"login-username" ,required: "required",placeholder: "Email"%>

                <span class="help-block"></span>
              </div>
              <div class="form-group">
                    <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off",id:"login-password",class:"form-control",required: "required",placeholder: "Password" %>
                <span class="help-block"></span>
              </div>
              <div class="checkbox">
                <label>
                  <% if devise_mapping.rememberable? -%>

                        <%= f.check_box :remember_me %>
                    <%#= f.label :remember_me %>
                    Remember login

                <%end%>
                </label>
              </div>
              <%= f.submit "Log in" ,class: "btn btn-success btn-block"%>
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <div class="col-xs-6">
           <p class="lead"> <span class="text-success">ProBlog</span></p>
          <ul class="list-unstyled" style="line-height: 2">
            <li><span class="fa fa-check text-success"></span> Become a Better Writer</li>
            <li><span class="fa fa-check text-success"></span> Become a Published Author</li>
            <li><span class="fa fa-check text-success"></span> Learn In-Demand Skills</li>
            <li><span class="fa fa-check text-success"></span> Express Yourself</li>
            <li><span class="fa fa-check text-success"></span> Help Others</li>
            <li><a href="#"><u>Read more</u></a></li>
          </ul>
          <p><%= link_to "Yes please, Sign up now!",new_registration_path(resource_name),class:"btn btn-info btn-block" %></p>
        </div>
      </div>
    </div>
  <%end%>
  </div>
</div>





